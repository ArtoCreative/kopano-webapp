<?xml version="1.0"?>
<!DOCTYPE plugin SYSTEM "manifest.dtd">
<plugin version="2.1">
	<info>
		<version>0.4</version>
		<title>Title Counter</title>
		<author>Kopano</author>
		<authorURL>https://www.kopano.com</authorURL>
		<description>Update the title of browser tab or window as per the unread count of Inbox folder of hierarchy</description>
	</info>
	<components>
		<component>
			<files>
				<client>
					<clientfile load="release">js/titlecounter.js</clientfile>
					<clientfile load="debug">js/titlecounter-debug.js</clientfile>
					<clientfile load="source">js/TitleCounter.js</clientfile>
					<clientfile load="source">js/ABOUT.js</clientfile>
				</client>
			</files>
		</component>
	</components>
</plugin>
