<?xml version="1.0"?>
<!DOCTYPE plugin SYSTEM "manifest.dtd">
<plugin version="2.1">
	<info>
		<version>0.3</version>
		<title>WebApp Manual</title>
		<author>Kopano</author>
		<authorURL>https://www.kopano.com</authorURL>
		<description>Adds a button in the top menu bar, that opens to the user manual of the Kopano WebApp.</description>
	</info>
	<config>
		<configfile>config.php</configfile>
	</config>
	<components>
		<component>
			<files>
				<server>
					<serverfile>php/plugin.webappmanual.php</serverfile>
				</server>
				<client>
					<clientfile load="release">js/webappmanual.js</clientfile>
					<clientfile load="debug">js/webappmanual-debug.js</clientfile>
					<clientfile load="source">js/ManualPlugin.js</clientfile>
				</client>
			</files>
		</component>
	</components>
</plugin>
